{% extends 'base.html.twig' %}

{% block title %}Hello FirstController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Controlador de pruebas</h1>
<hr>
    <p>Flash y json</p>
    {% for m in app.flashes('mensaje') %}
        <div class="alert-success">{{ m }}</div>
    {% endfor %}
    <hr>
    <hr>
    <a href="{{path('downloadFile')}}"><button class="btn btn-dark">Download File Json</button></a>
    <hr>
    {{ message }}
    <hr>
    <a href="{{path('sendMail')}}"><button class="btn btn-dark">Send mail</button></a>
    <hr>
    {{ app.request.get('envio') }}








</div>
{% endblock %}
